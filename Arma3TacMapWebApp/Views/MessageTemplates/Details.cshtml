@model Arma3TacMapWebApp.Entities.MessageTemplate
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Model.Title;
    var canEdit = ViewBag.CanEdit as bool? ?? false;
    var token = canEdit || Model.Visibility == Arma3TacMapWebApp.Entities.OrbatVisibility.Public ? null : Model.Token;
}
<div class="container">

    <h1 class="text-center">
        @Model.Title
        <a asp-action="Clone" class="btn btn-sm btn-secondary" asp-route-id="@Model.MessageTemplateID" asp-route-t="@token"><i class="far fa-clone"></i> @Localizer["Create a copy"]</a>
        <a asp-action="Export" class="btn btn-sm btn-secondary" asp-route-id="@Model.MessageTemplateID" asp-route-t="@token"><i class="fas fa-share-square"></i> @Localizer["Export"]</a>
    </h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="modal-dialog mt-0 mb-0">
                <div class="modal-content">
                    <div class="modal-body">
                        <div id="compose-form-fields">
                            <!-- Content will be generated by preformat.js -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <p>@Localizer["Generated message"]</p>
            <p><button class="btn btn-secondary btn-copy" type="button" data-copy="compose-text">@Localizer["Copy"]</button></p>
            <div class="input-group">
                <textarea id="compose-text" class="form-control" rows="@Math.Max(Model.Lines!.Count+1,2)"></textarea>
            </div>
        </div>
    </div>

    <div class="mt-2">
        <h2>@Localizer["Informations"]</h2>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Owner!.UserLabel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Visibility)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Visibility)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountryCode)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.CountryCode)
            </dd>
        </dl>
        @if (canEdit)
        {
            <p>
                <a class="btn btn-primary" asp-controller="MessageLineTemplates" asp-action="Create" asp-route-messageTemplateID="@Model.MessageTemplateID">@Localizer["Add a line"]</a>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.MessageTemplateID">@Localizer["Edit"]</a>
            </p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].SortNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Lines.Count < 2 && canEdit)
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            <p>
                                @Localizer["To allow the user to enter values, one or more lines with fields must be provided."]<br />
                                <strong>@Localizer["Use the button 'Add a line' above."]</strong>
                            </p>
                            <p>@Localizer["First line (number 0) should be used to specify the message type."]</p>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Lines!)
                {
                    <tr>
                        <td>
                            <a asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID" asp-route-t="@token">
                                @Html.DisplayFor(modelItem => item.SortNumber)
                            </a>
                        </td>
                        <td>
                            <a asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID" asp-route-t="@token">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID" asp-route-t="@token">@Localizer["View"]</a>
                            @if (canEdit)
                            {
                                <a class="btn btn-sm btn-outline-primary" asp-controller="MessageLineTemplates" asp-action="Edit" asp-route-id="@item.MessageLineTemplateID">@Localizer["Edit"]</a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="MessageLineTemplates" asp-action="Delete" asp-route-id="@item.MessageLineTemplateID">@Localizer["Delete"]</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/preformat.js"></script>
    <script>
        showPerformated({lines: @Json.Serialize(Model.Lines)});
    </script>
}
