@model Arma3TacMapWebApp.Entities.MessageTemplate
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Model.Title;
    var canEdit = ViewBag.CanEdit as bool? ?? false;
}
<div class="container">

    <h1>@Model.Title</h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="modal-dialog mt-0 mb-0">
                <div class="modal-content">
                    <div class="modal-body">
                        <div id="compose-form-fields">
                            <!-- Content will be generated by preformat.js -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <p>Generated message</p>
            <textarea id="compose-text" class="w-100" rows="@Math.Max(Model.Lines!.Count+1,2)">
            </textarea>
            <button class="btn btn-secondary" onclick="copyToClipboard()">Copy to clipboard</button>
        </div>
    </div>

    <div class="mt-2">
        <h2>@Localizer["Informations"]</h2>
        @if (canEdit)
        {
            <p>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.MessageTemplateID">@Localizer["Edit"]</a>
            </p>
        }
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Owner!.UserLabel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Visibility)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Visibility)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountryCode)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.CountryCode)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <h2>@Localizer["Lines Configuration"]</h2>
        @if (canEdit)
        {
            <p>
                <a class="btn btn-primary" asp-controller="MessageLineTemplates" asp-action="Create" asp-route-messageTemplateID="@Model.MessageTemplateID">@Localizer["Add a line"]</a>
            </p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].SortNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lines![0].Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Lines!)
                {
                    <tr>
                        <td>
                            <a asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID">
                                @Html.DisplayFor(modelItem => item.SortNumber)
                            </a>
                        </td>
                        <td>
                            <a asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-controller="MessageLineTemplates" asp-action="Details" asp-route-id="@item.MessageLineTemplateID">@Localizer["View"]</a>
                            @if (canEdit)
                            {
                                <a class="btn btn-sm btn-outline-primary" asp-controller="MessageLineTemplates" asp-action="Edit" asp-route-id="@item.MessageLineTemplateID">@Localizer["Edit"]</a>
                                <a class="btn btn-sm btn-outline-danger"  asp-controller="MessageLineTemplates" asp-action="Delete" asp-route-id="@item.MessageLineTemplateID">@Localizer["Delete"]</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/js/preformat.js"></script>
    <script>
        function copyToClipboard() {
            const textField = document.getElementById('compose-text');
            navigator.clipboard.writeText(textField.value);
        }

        showPerformated({lines: @Json.Serialize(Model.Lines)});
    </script>
}
