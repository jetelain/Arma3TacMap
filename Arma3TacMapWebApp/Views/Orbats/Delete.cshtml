@model Arma3TacMapWebApp.Entities.Orbat
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Delete an order of battle"];
}
<div class="container">
    <h1>@Localizer["Delete an order of battle"]</h1>

    <h3>@Localizer["Are you sure you want to detele this order of battle?"]</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Owner.UserLabel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Label)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Label)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Visibility)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Visibility)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OrbatID" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        </form>
    </div>
</div>
