@model Arma3TacMapWebApp.Entities.OrbatUnit
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Delete an unit"];
}
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Orbats" asp-action="Details" asp-route-id="@Model.OrbatID">@Model.Orbat.Label</a></li>
            @*<li class="breadcrumb-item active" aria-current="page">@Localizer["Edit an unit"]</li>*@
        </ol>
    </nav>
    <h1>@Localizer["Delete an unit"]</h1>

    <h3>@Localizer["Are you sure you want to detele this unit?"]</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orbat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orbat.Label)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Parent.OrbatUnitID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UniqueDesignation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniqueDesignation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NatoSymbolFriendlyImageBase64)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.NatoSymbolFriendlyImageBase64" alt="@Model.GetNatoSymbol('3')" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NatoSymbolHostileImageBase64)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.NatoSymbolHostileImageBase64" alt="@Model.GetNatoSymbol('6')" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrbatUnitID" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
</div>
