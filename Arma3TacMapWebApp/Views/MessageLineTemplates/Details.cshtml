@model Arma3TacMapWebApp.Entities.MessageLineTemplate
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Model.Title + " - " + Model.MessageTemplate!.Title;
    var canEdit = ViewBag.CanEdit as bool? ?? false;

}
<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="MessageTemplates" asp-action="Details" asp-route-id="@Model.MessageTemplateID">@Model.MessageTemplate!.Title</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>

        </ol>
    </nav>

    <h1>@Model.Title</h1>

    <div>
        <div class="row">
            <div class="col-8">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div id="compose-form-fields">
                                <!-- Content will be generated by preformat.js -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <p>Generated message</p>
                <textarea id="compose-text" class="w-100" rows="2">
                </textarea>
            </div>
        </div>
    </div>

    <div>
        <h2>@Localizer["Line Configuration"]</h2>
        @if (canEdit)
        {
            <p>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.MessageLineTemplateID">@Localizer["Edit"]</a>
            </p>
        }
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SortNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SortNumber)
            </dd>
        </dl>
    </div>

    <div>
        <h2>@Localizer["Fields Configuration"]</h2>
        @if (canEdit)
        {
            <p>
                <a class="btn btn-primary" asp-controller="MessageFieldTemplates" asp-action="Create" asp-route-messageLineTemplateID="@Model.MessageLineTemplateID">@Localizer["Add a field"]</a>
            </p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Fields![0].SortNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fields![0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fields![0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fields![0].Type)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Fields!)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SortNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @if (canEdit)
                            {
                                <a class="btn btn-sm btn-outline-primary" asp-controller="MessageFieldTemplates" asp-action="Edit" asp-route-id="@item.MessageFieldTemplateID">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="MessageFieldTemplates" asp-action="Delete" asp-route-id="@item.MessageFieldTemplateID">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/preformat.js"></script>
    <script>
        showPerformated({lines:[ @Json.Serialize(Model) ]});
    </script>
}
